<apex:page controller="CreateInvoiceController" action="{!processRecord}">
    <h1>Invoice Details</h1>
    
    <!-- Invoice Details Section -->
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Account</td>
                <td>{!invoice.Account__r.Name}</td>
            </tr>
            <tr>
                <td>Invoice Number</td>
                <td>{!invoice.Name}</td>
            </tr>
            <tr>
                <td>Invoice Date</td>
                <td>
                    <apex:outputText value="{0, date, dd/MM/yyyy}">
                        <apex:param value="{!invoice.Invoice_Date__c}" />
                    </apex:outputText>
                </td>
            </tr>
            <tr>
                <td>Due Date</td>
                <td>
                    <apex:outputText value="{0, date, dd/MM/yyyy}">
                        <apex:param value="{!invoice.Due_Date__c}" />
                    </apex:outputText>
                </td>
            </tr>
            <tr>
                <td>Invoice Reference</td>
                <td>{!invoice.Invoice_Reference__c}</td>
            </tr>
            <tr>
                <td>Total</td>
                <td>{!invoice.Total__c}</td>
            </tr>
        </tbody>
    </table>

    <!-- Line Items Section -->
    <h2>Order Details</h2>
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <apex:repeat value="{!lineItems}" var="item">
                <tr>
                    <td>{!item.Name}</td>
                    <td>{!item.Quantity__c}</td>
                    <td>{!item.Unit_Price__c}</td>
                    <td>{!item.Amount__c}</td>
                </tr>
            </apex:repeat>
        </tbody>
    </table>
    <apex:form>
        <apex:commandButton value="Show JSON" action="{!showJson}" />
    </apex:form>
</apex:page>